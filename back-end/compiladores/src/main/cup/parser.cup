lista_instrucciones ::=  instruccion:e1 lista_instrucciones:e2
                    {:
                        Nodo tmp = new Nodo("instruccion");
                        tmp.setNumNodo(contador++);
                        tmp.addHijo((Nodo)e1);
                        tmp.addHijo((Nodo)e2);
                        RESULT=tmp;
                     :}
                     | /*Vacio*/;

instruccion ::= declaracion:e1
            {:
                Nodo tmp = new Nodo("declaracion");
                tmp.setNumNodo(contador++);
                tmp.addHijo((Nodo)e1);
                RESULT=tmp;
            :}
            | asignar:e1
            | COMENTARIO:e1
            {:
                Nodo tmp = new Nodo("comentario");
                tmp.setNumNodo(contador++);
                tmp.addHijo(new Nodo("Comentario",e1.toString()));
                RESULT=tmp;
            :};



/*Valores*/
valor ::= CADENA:e1 {:  :}
        | BOOLEAN:e2{:  :}
        | CARACTER:e3{:  :}
        | expr:e4{: :};

/*Expresiones*/
expr ::= expr:e1 SUMA:e2 expr:e3 {:  :}
        |expr:e1 RESTA:e2 expr:e3 {::}
        |expr:e1 MULTI:e2 expr:e3 {::}
        |expr:e1 DIVI:e2 expr:e3 {::}
        |expr:e1 MODULO:e2 expr:e3 {::}
        |expr:e1 POTENCIA:e2 expr:e3 {::}
        |LPAREN:e1 expr:e2 RPAREN:e3 {::}
        |RESTA:e1 NUMERO:e2 {::}
        |NUMERO:e1 {:  :};

/*Declaracion*/
lista_variables ::= VARIABLE:e1 COMA:e2 lista_variables:e3 {:  :}
                | VARIABLE:e1 {:  :};

lista_valores ::= valor:e1 COMA:e2 lista_valores:e3 {:  :}
                | valor:e1 {:  :};

declaracion ::= INGRESAR lista_variables:e1 COMO TIPO CON_VALOR:e2 lista_valores:e3
{: :};

/*Asignacion*/
asignar ::= lista_variables ASIGNACION expr;

/*Condiciones*/

op_relacional ::= MAYOR | MENOR | MAYORIGUAL | MENORIGUAL | IGUAL | DIFERENTE;
op_logico ::= OR|AND;

condicion ::= expr op_relacional expr
            | condicion op_logico condicion
            | NOT condicion;

